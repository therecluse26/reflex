{
  "name": "reflex",
  "displayName": "Reflex Code Search",
  "description": "Fast, local-first code search powered by Reflex",
  "version": "0.1.0",
  "publisher": "reflex-search-app",
  "icon": "assets/reflex-icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "search",
    "code search",
    "full-text search",
    "grep",
    "find",
    "ripgrep",
    "reflex",
    "symbol search",
    "codebase search",
    "local search",
    "ai",
    "chat",
    "ask",
    "trigram",
    "rust",
    "fast search"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reflex-search/reflex.git",
    "directory": "vscode"
  },
  "homepage": "https://github.com/reflex-search/reflex#readme",
  "bugs": {
    "url": "https://github.com/reflex-search/reflex/issues"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:reflex.searchView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reflex",
          "title": "Reflex Search",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "reflex": [
        {
          "id": "reflex.searchView",
          "name": "Code Search",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "reflex.helloWorld",
        "title": "Reflex: Hello World"
      },
      {
        "command": "reflex.reindex",
        "title": "Reflex: Re-Index Project"
      },
      {
        "command": "reflex.openFile",
        "title": "Reflex: Open File"
      },
      {
        "command": "reflex.configureAI",
        "title": "Reflex: Configure AI Provider"
      },
      {
        "command": "reflex.clearChatHistory",
        "title": "Reflex: Clear Chat History"
      }
    ],
    "configuration": {
      "title": "Reflex",
      "properties": {
        "reflex.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the rfx binary. Leave empty to use PATH."
        },
        "reflex.promptGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Prompt to add .reflex/ to .gitignore after first index"
        },
        "reflex.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "groq"
          ],
          "default": "openai",
          "description": "AI provider for natural language search"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "reflex-search": "^1.0.3"
  }
}
